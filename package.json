{
  "name": "kylindc-blog",
  "version": "0.0.1",
  "description": "KylinDC's personal blog",
  "private": true,
  "scripts": {
    "hexo": "pnpx hexo",
    "build": "hexo clean && hexo generate",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "format": "prettier --write .",
    "prepare": "husky install",
    "preinstall": "npx -y only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KylinDC/kylindc-blog.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "KylinDC",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/KylinDC/kylindc-blog/issues"
  },
  "homepage": "https://github.com/KylinDC/kylindc-blog#readme",
  "hexo": {
    "version": "5.4.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "as-needed",
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "packageManager": "^pnpm@8.6.5",
  "dependencies": {
    "hexo": "^5.4.2",
    "hexo-abbrlink": "^2.2.1",
    "hexo-asset-pipeline": "^1.8.0",
    "hexo-blog-encrypt": "^3.1.9",
    "hexo-cli": "^4.3.1",
    "hexo-filter-auto-spacing": "^0.2.1",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-robotstxt": "^0.2.0",
    "hexo-generator-search": "^2.4.3",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^5.0.0",
    "hexo-renderer-stylus": "^2.1.0",
    "hexo-server": "^3.0.0",
    "hexo-tag-mmedia": "^1.1.7",
    "hexo-theme-landscape": "^0.0.3"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
