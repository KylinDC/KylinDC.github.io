{
  "name": "kylindc-blog",
  "version": "0.0.1",
  "description": "KylinDC's personal blog",
  "private": true,
  "scripts": {
    "hexo": "pnpx hexo",
    "build": "hexo generate",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KylinDC/kylindc-blog.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "KylinDC",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/KylinDC/kylindc-blog/issues"
  },
  "homepage": "https://github.com/KylinDC/kylindc-blog#readme",
  "hexo": {
    "version": "5.4.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "as-needed",
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "hexo": "^5.0.0",
    "hexo-cli": "^4.3.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^4.0.0",
    "hexo-renderer-stylus": "^2.0.0",
    "hexo-server": "^2.0.0",
    "hexo-theme-landscape": "^0.0.3"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
